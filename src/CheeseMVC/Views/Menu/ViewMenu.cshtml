@model CheeseMVC_persistent.ViewModels.ViewMenuViewModel

@{ 
    ViewBag.Title = Model.Menu.MenuName;
}

<ul>
    @foreach (var cheeseMenu in Model.Items)
    {
        <li>@cheeseMenu.Cheese.Name</li>

    }
</ul>
@if (Model.Items.Count==0)
{
    <p><i>No Menu Items</i></p>

}

<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.MenuID">Add Item</a></p>